[Unit]
Description=WSO2 Stream Processor - Editor
After=network.target

[Service]
ExecStart={{ setup_path }}/{{ product_name }}/{{ product_version }}/bin/editor.sh start
ExecStop={{ setup_path }}/{{ product_name }}/{{ product_version }}/bin/editor.sh stop
ExecRestart={{ setup_path }}/{{ product_name }}/{{ product_version }}/bin/editor.sh restart
PIDFile={{ setup_path }}/{{ product_name }}/{{ product_version }}/wso2/editor/runtime.pid
User={{ wso2_user }}
Group={{ wso2_group }}
Type=forking
Restart=on-failure
RestartSec=5
StartLimitInterval=60s
StartLimitBurst=3

[Install]
WantedBy=multi-user.target
